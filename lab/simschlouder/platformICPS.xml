<?xml version='1.0'?>
 <!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid.dtd">
 <platform version="3">
 
 <AS  id="AS0" routing="Full">
	
	<cluster id="icps" prefix="icps-gc-" suffix=".me" radical="1-30" 
         power="10e9" core="25" bw="120e6" lat="0.0001"
    	 bb_bw="120e6" bb_lat="0.0001" />
 
 	 <AS id="AS_Controller" routing="Full">
	   <host id="controller" power="1e9" core="2" />
	 </AS>
	
	<link id="controller2icps" bandwidth="1e9" latency="5E-5"/> 
	
	<ASroute src="AS_Controller" dst="icps" gw_src="controller" gw_dst="icps-gc-icps_router.me" symmetrical="YES">
		<link_ctn id="controller2icps"/>
	</ASroute>
	
</AS> 
 
 </platform>
